programa
{
	
	funcao inicio()
	{
		real prova1, prova2, trabalho, media

		escreva("Qual foi sua nota na prova 1?")
		leia(prova1)
		escreva("Qual foi sua nota na prova 2?")
		leia(prova2)
		escreva("Qual foi sua nota no trabalho?")
		leia(trabalho)

		media = (prova1*2 + prova2*3 + trabalho*4) / (2+3+4)

		escreva("Sua média é:", media)
		
	}

}
